{
  "name": "hianime-api",
  "module": "index.js",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "scripts": {
    "prepare": "husky",
    "lint": "eslint",
    "lint:fix": "eslint --fix && prettier . --write",
